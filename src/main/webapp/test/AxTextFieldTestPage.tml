<?xml version="1.0" encoding="UTF-8"?>
<html
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
	xmlns:p="tapestry:parameter"
>

	<body>
		<t:AxForm>
			<t:AxTextfield
				t:label="literal:Textfield"
				t:id="textfield"
				t:validate="required"
				t:value="text" 
			/>

			<t:AxTextfield
				t:label="literal:Custom Message"
				t:id="custom"
				t:validate="required"
				t:value="text1"
			/>

			<t:AxTextfield
				t:label="literal:Disabled"
				t:id="textfieldDisabled"
				disabled="true"
				t:value="text2" 
			/>
			
			<t:AxSubmit label="submit" />
		</t:AxForm>
	</body>
</html>