<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd">
	<head>
		<title>axirassa | internal systems monitor</title>
		<link rel="stylesheet" type="text/css" href="css/sentinel.css" />
		
		<script type="text/javascript">
			var gOverride = {
			  center: false,
			  
			  gColor: '#333333',
			  gColumns: 9,
			  gOpacity: 0.05,
			  gWidth: 10,
			  
			  pColor: '#0000ff',
			  pHeight: 15,
			  pOffset: 0,
			  pOpacity: 0.1,
			  gEnabled: true,
			  pEnabled: true,
			  
			  setupEnabled: false,
			  fixFlash: true,
			  size: 900
			};
			
			createGridder = function() {
			  document.body.appendChild(
			    document.createElement('script')).src='http://gridder.andreehansson.se/releases/1.3.1/960.gridder.js';
			}
			</script>
	</head>
	<body >
		<div id="header">
			<span class="logo">axirassa</span> sentinel &#8212; <span class="host">zanoccio.com</span>
		</div>

		<div class="agent">
			<div class="agentname">cpu</div>
		
			<t:axplot t:id="cpuupdate" source="/axir/sentinel.cpuupdate" type="percent" color="#f90" />
		</div>
		<div class="agent">
			<div class="agentname">memory</div>
			<t:axplot t:id="memupdate" source="/axir/sentinel.memupdate" type="data" color="#f09" />
		</div>
		<div class="agent">
			<div class="agentname">disk space</div>
		</div>
		<div class="agent">
			<div class="agentname">disk io</div>
		</div>
		<div class="agent">
			<div class="agentname">network</div>
		</div>
		<div class="agent">
			<div class="agentname">throughput</div>
		</div>
		
		

		
		<script type="text/javascript">
			document.observe('dom:loaded', function(){
//				plotchart('cpuchart', '/axir/sentinel.cpuupdate', 'percent', '#f90'),
//				plotchart('memchart', '/axir/sentinel.memupdate', 'data', '#f09')
			});			
		</script>
		
	</body>
</html>