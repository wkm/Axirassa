<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="axirassa.model">
  <query name="email_by_id">
        from UserEmailAddressEntity
	    where
	        id = :id
    </query>
  <query name="user_emails">
        from UserEmailAddressEntity
	    where
	        user = :user
        order by
            primaryEmail desc
    </query>
  <query name="user_primary_email">
        from UserEmailAddressEntity
        where
	        user = :user and
	        primaryEmail = true
    </query>
  <query name="email_by_token">
        from UserEmailAddressEntity
	    where
	        token = :token
    </query>
</hibernate-mapping>
