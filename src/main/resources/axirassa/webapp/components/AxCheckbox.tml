<?xml version="1.0" encoding="utf-8" ?> 
<t:container xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd">
	<t:AxFormField>
		<t:Checkbox 
			class='input check' 
			t:id="checkboxField"
			t:label="${label}"
			t:value="value"
		/>
		<t:Label 
			class='long' 
			t:for="checkboxField"
		>
			&#8212; ${name}
		</t:Label>
	</t:AxFormField>
</t:container>