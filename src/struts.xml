<?xml version="1.0"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.ui.theme" value="axirtheme" />
	<constant name="struts.ui.templateDir" value="resources/template" />
	
	<package name="com.zanoccio.axirassa.webapp" extends="struts-default">	
		<action name="Logon_*" method="{1}" class="com.zanoccio.axirassa.webapp.LogonAction">
			<result type="redirectAction">Menu</result>
			<result name="input">/User/Logon.jsp</result>
		</action>
		
		<action name="Register_*" method="{1}" class="com.zanoccio.axirassa.webapp.RegisterAction">
			<interceptor-ref name="jsonValidationWorkflowStack"/>
			<result type="redirectAction">Menu</result>
			<result name="input">/User/Register.jsp</result>
		</action>
		
		<action name="*" class="com.zanoccio.axirassa.webapp.WebappSupport">
			<result>/{1}.jsp</result>
		</action>
	</package>
</struts>